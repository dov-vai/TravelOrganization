@page "/ReviewDelete/{ReviewId:int}"
@using TravelOrganization.Controllers
@rendermode InteractiveServer
@inject ReviewController ReviewController

<div class="d-flex flex-column justify-content-center align-items-center">
    <div class="card" style="width: 18rem; margin: 20px;">
        <div class="card-body">
            <h5 class="card-title">Šalinimo patvirtinimas</h5>
            <p class="card-text">
                Ar tikrai norite ištrinti šį atsiliepimą?
            </p>
            <div class="d-flex justify-content-end">
                <button @onclick="()=> ReviewController.DeleteReview(ReviewId)" class="btn btn-danger me-2">Patvirtinti</button>
                <button @onclick="ReviewController.BackToStops" class="btn btn-secondary">Atšaukti</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int ReviewId { get; set; }
}